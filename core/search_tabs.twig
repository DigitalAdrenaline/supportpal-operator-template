<ul class="sp-tabs">
    {% if isModuleEnabled('Ticket') and auth_user().hasPermission('view.ticket') %}
        <li {% if Request.input('tab') == 0 %}class="sp-active"{% endif %}>
            <a href="{{ route('core.operator.search', {'query': Request.input('query'), 'tab': 0}) }}">{{ Lang.choice('ticket.ticket', 2) }}</a>
        </li>
    {% endif %}
    {% if auth_user().hasPermission('view.user') %}
        <li {% if Request.input('tab') == 1 %}class="sp-active"{% endif %}>
            <a href="{{ route('core.operator.search', {'query': Request.input('query'), 'tab': 1}) }}">{{ Lang.choice('user.user', 2) }}</a>
        </li>
    {% endif %}
    {% if auth_user().hasPermission('view.organisation') %}
        <li {% if Request.input('tab') == 2 %}class="sp-active"{% endif %}>
            <a href="{{ route('core.operator.search', {'query': Request.input('query'), 'tab': 2}) }}">{{ Lang.choice('user.organisation', 2) }}</a>
        </li>
    {% endif %}
    {% if isModuleEnabled('Selfservice') and auth_user().hasPermission('view.article') %}
        <li {% if Request.input('tab') == 3 %}class="sp-active"{% endif %}>
            <a href="{{ route('core.operator.search', {'query': Request.input('query'), 'tab': 3}) }}">{{ Lang.choice('selfservice.article', 2) }}</a>
        </li>
    {% endif %}
</ul>