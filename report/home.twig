{% extends parent_template %}

{% block sidebar %}
    {% include 'operator.' ~ template ~ '.report.sidebar' %}
{% endblock %}

{% block title %}
    {{ Lang.choice('report.report', 2) }}
{% endblock %}

{% block content %}

    <hr />

    {% for report in reports %}
        <div class="sp-mt-6 sp-mb-3 sp-flex">
            <div class="sp-flex-initial">
                {{ report.icon|raw }}
            </div>
            <h3 class="sp-m-0">{{ report.name }}</h3>
        </div>
        <div class="sp-flex sp-flex-wrap sp--m-3/2">
            {% for dashboard in report.dashboards %}
                <div class="sp-w-full sp-p-3/2 sm:sp-w-1/2 lg:sp-w-1/3">
                    <a class="sp-block sp-h-full sp-p-4 sp-border sp-border-tertiary sp-rounded hover:sp-shadow" href="{{ route('report.operator.dashboard', {'name': dashboard.uriKey()}) }}">
                        <h4 class="sp-mt-0">{{ dashboard.name() }}</h4>
                        <div class="sp-description">{{ dashboard.description() }}</div>
                    </a>
                </div>
            {% endfor %}
        </div>
    {% endfor %}

{% endblock %}
